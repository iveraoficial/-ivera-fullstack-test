extends home

block content
  main.main.container 
    .characters-list
      each char in characters.data.results
        .character-card
          img.character-img(src=`${char.thumbnail.path}.${char.thumbnail.extension}`)
          h2.character-name= char.name
          a.character-btn(href=char.id) Details

  .characters-navigation.container
    button.btn-nav 1
    button.btn-nav 2
    button.btn-nav 3
    button.btn-nav &rarr;


        




